<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="6dp"
    android:background="@drawable/baca_quran_item_container"
    android:padding="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/baca_quran_item_position"
        android:text="1"
        android:fontFamily="@font/alhambra"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:maxWidth="80dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/baca_quran_item_name"
            android:text="Al Fatihah"
            android:textStyle="bold"
            android:fontFamily="@font/bellerose"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/baca_quran_item_description"
                android:textColor="#3D3C3C"
                android:text="SAPI BETINA | Mekah | 286 ayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>